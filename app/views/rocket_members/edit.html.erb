<%= render partial: 'rockets/nav', locals: { } %>

<div class="row" style="margin-top: 30px">
  <div class="col-xs-12">
    <%= form_for @rocket_member, html: { class: "form-group form-member" } do |f| %>
      <%= render partial: 'form', locals: { f: f } %>
      <div class="btn-wrapper">
        <%= link_to "접속", "https://instagram.com/#{@rocket_member.email}/", target: "_blank", class: "btn btn-info" %>
        <%= f.submit "수정", class: "btn btn-primary" %>
        <%= link_to "취소", rockets_path, class: "btn btn-warning" %>
        <%= link_to "삭제", rocket_member_path(@rocket_member.id, rocket_id: @rocket_member.rocket_id), method: "DELETE", class: "btn btn-danger", data: {confirm: "Are You Sure?"} %>
      </div>
    <% end %>
  </div>
</div>
