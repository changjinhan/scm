<div class="container fixed">
  <div class="row">
    <div class="col-md-8 col-offset-md-2">
      <h1>입고 수량 입력</h1>
      <%= form_tag(count_path(@count), method: "PATCH", class: "edit-count-form") do %>
        <table class="edit-count">
          <tbody>
            <tr>
              <td class="td-label">
                <%= label_tag(:count, "제품코드") %>
              </td>
              <td>
                <%= text_field_tag(:count, @count.product.code, disabled: true) %><br />
              </td>
            </tr>
            <tr>
              <td class="td-label">
                <%= label_tag(:count, "상품명") %>
              </td>
              <td>
                <%= text_field_tag(:count, @count.product.name, disabled: true) %><br />
              </td>
            </tr>
            <tr>
              <td class="td-label">
                <%= label_tag(:count, "재고량") %>
              </td>
              <td>
                <%= number_field_tag(:count, @count.count) %><br />
              </td>
            </tr>
            <tr>
              <td class="td-label">
                <%= label_tag(:buffer, "입고량") %>
              </td>
              <td>
                <%= number_field_tag(:buffer, @count.buffer) %>
              </td>
            </tr>
            <tr>
              <td class="td-label">
                <%= label_tag(:description, "특이사항") %>
              </td>
              <td>
                <%= text_field_tag(:description, @count.description) %>
              </td>
            </tr>
          </tbody>
        </table>
        <%= submit_tag("수정", class: "btn btn-primary button", style: "margin-left: 110px;") %>
        <%= link_to "뒤로", :back, class: "btn btn-warning button" %>
      <% end %>
    </div>
  </div>
</div>
