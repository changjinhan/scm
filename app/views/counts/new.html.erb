<%= render partial: '/products/nav', locals: { } %>

<div class="container fixed">
  <div class="row">
    <%= form_tag(counts_path, method: 'POST') do  %>
      <table class="table hover">
        <thead>
          <th>상품코드</th>
          <th>상품명</th>
          <th>재고</th>
        </thead>
        <tbody>
          <% @products.each do |p| %>
            <tr>
              <td><%= p.code %></td>
              <td><%= p.name %></td>
              <td><%= number_field_tag "#{p.id}", "#{@data[:"#{p.code}"].nil? ? 0 : @data[:"#{p.code}"]}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= submit_tag "등록", class: "btn btn-primary button", style: "margin: 0 0 30px 450px" %>
      <%= link_to "메인", :back , class: "btn btn-warning button", style: "margin: 0 0 30px 0" %>
    <% end %>
  </div>
</div>
