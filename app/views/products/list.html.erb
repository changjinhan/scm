<%= render partial: 'nav', locals: { } %>

<div class="row">
  <div class="col-md-12">
    <table class="table hover">
      <thead>
        <th>품목</th>
        <th>상품코드</th>
        <th>상품명</th>
        <th>출시일</th>
        <th>수정</th>
      </thead>
      <tbody>
        <% @products.each_with_index do |p, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= p.code %></td>
            <td><%= p.name %></td>
            <td><%= p.date %></td>
            <td><%= link_to "수정", edit_product_path(p) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
