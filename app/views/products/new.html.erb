<%= form_tag(products_path, method: 'POST') do  %>
  <table class="table hover">
    <thead>
      <th>상품코드</th>
      <th>상품명</th>
      <th>재고</th>
    </thead>
    <tbody>
      <% @products.each do |p| %>
        <tr>
          <td><%= p.code %></td>
          <td><%= p.name %></td>
          <td><%= number_field_tag "#{p.id}", "#{@data[:"#{p.code}"]}" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag "등록" %>
<% end %>
