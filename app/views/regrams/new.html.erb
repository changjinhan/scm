<%= render partial: 'nav', locals: { } %>
<%= render partial: 'nav_sub', locals: { } %>

<div class="container fixed-sub">
  <div class="buffer"></div>
  <div class="row">
    <%= nested_form_for @regram, html: { class: "form-group form-regram", multipart: true } do |f| %>
      <%= render partial: 'form', locals: { f: f, regram: @regram, member: @member, date: @date, time: @time } %>
      <div class="btn-wrapper">
        <%= f.submit "저장", class: "btn btn-primary" %>
        <%= link_to "메뉴", @member.nil? ? regrams_path : edit_member_path(@member.id), class: "btn btn-warning" %>
      </div>
    <% end %>
  </div>
</div>
