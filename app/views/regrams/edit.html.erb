<div class="container">
  <div class="row">
    <h1>리그램 상세보기</h1>
    <%= form_for @regram, html: { class: "form-group form-regram" } do |f| %>
      <%= render partial: 'form', locals: { f: f, regram: @regram, member: @member, date: @date, time: @time } %>
      <div class="btn-wrapper">
        <a download="<%= @regram.member.email %>_<%= @regram.date %>" href=<%= @regram.img.url%> class="btn btn-default">그림 다운</a>
        <span class="btn btn-default btn-copy">글 복사</span>
        <%= f.submit "수정", class: "btn btn-primary" %>
        <%= link_to "취소", :back, class: "btn btn-warning" %>
        <%= link_to "스케줄", regrams_path, class: "btn btn-danger" %>
        <%= link_to "회원정보", edit_member_path(@member), class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
