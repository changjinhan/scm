<%= f.label :unit, "기수" %>
<%= f.number_field :unit, required: true, class: "form-control" %>
<%= f.label :term, "운영일자" %>
<%= f.select :term, options_for_select([["31 DAYS", 31], ["15 DAYS", 15], ["7 DAYS", 7]], 31), {}, class: "form-control" %>
<%= f.label :start_date, "시작일" %>
<%= f.date_field :start_date, required: true, class: "form-control" %>
<%= f.label :end_date, "종료일" %>
<%= f.date_field :end_date, required: true, disabled: true, class: "form-control" %>
<%= f.hidden_field :end_date %>
<%= f.label :volume, "모집인원" %>
<%= f.number_field :volume, required: true, class: "form-control" %>
