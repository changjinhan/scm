<%= render partial: 'regrams/nav', locals: { } %>
<%= render partial: 'regrams/nav_sub', locals: { } %>

<div class="container">
  <div class="buffer"></div>
  <div class="row">
    <%= form_for @tag, html: { class: "form-group form-tag" } do |f| %>
      <%= render partial: 'form', locals: { f: f } %>
      <div class="btn-wrapper">
        <%= f.submit "수정", class: "btn btn-primary" %>
        <%= link_to "삭제", tag_destroy_path(@tag), class: "btn btn-danger" %>
        <%= link_to "메뉴", tags_path, class: "btn btn-warning"  %>
      </div>
    <% end %>
  </div>
</div>
