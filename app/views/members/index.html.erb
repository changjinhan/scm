<div class="container">
  <h1>인스타그램 > 회원 정보</h1>
  <%= link_to "홈", root_path, class: "main-link" %>
  <%= link_to "스케줄", regrams_path, class: "main-link" %>
  <%= link_to "태그 관리", tags_path, class: "main-link" %>
  <div class="row">
    <div class="btn-wrapper" style="margin-top: 20px;">
      <%= link_to "신규 등록", new_member_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-hover table-regram-index">
      <thead>
        <th class="text-center pc">No</th>
        <th class="text-center pc">회원번호</th>
        <th class="text-center">ID</th>
        <th class="text-center pc">로켓단</th>
        <th class="text-center pc">등록일자</th>
        <th class="text-center">최근 날짜</th>
        <th class="text-center">횟수</th>
        <th class="text-center">접속</th>
      </thead>
      <tbody>
        <% @members.each_with_index do |m, index| %>
          <tr onclick="location.href='../../members/<%= m.id %>/edit'">
            <td class="text-center pc"><%= index + 1 %></td>
            <td class="text-center pc"><%= m.id %></td>
            <td class="text-center"><%= m.email %></td>
            <td class="text-center pc"><%= m.rocket %></td>
            <td class="text-center pc"><%= m.date %></td>
            <td class="text-center"><%= m.regrams.present? ? m.regrams.last.date.strftime("%m-%d") : "-" %></td>
            <td class="text-center"><%= m.regrams.count %></td>
            <td class="text-center"><%= link_to "접속", "https://www.instagram.com/#{m.email}", class: "btn btn-primary btn-small" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center" style="margin: 10px 0 30px 0;">
      <%= will_paginate @members %>
    </div>
  </div>
</div>
